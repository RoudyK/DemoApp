<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="review"
            type="com.demo.roudykk.demoapp.api.model.Review" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/colorDim">

        <ImageView
            android:id="@+id/logoIv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/review_logo"
            android:tint="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/reviewTv"
            fontPath="fonts/AirbnbCereal-Light.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="@{String.format(@string/quoted, review.content)}"
            android:textColor="@color/colorLight"
            app:layout_constraintLeft_toRightOf="@+id/logoIv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/lorem/random" />


        <TextView
            android:id="@+id/authorTv"
            fontPath="fonts/AirbnbCereal-Bold.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:text="@{review.author}"
            android:textColor="@color/colorLight"
            app:layout_constraintLeft_toRightOf="@+id/logoIv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reviewTv"
            tools:text="@tools:sample/full_names" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorDivider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authorTv" />
    </android.support.constraint.ConstraintLayout>

</layout>