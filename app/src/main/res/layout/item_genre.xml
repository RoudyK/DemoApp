<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="genre"
            type="com.roudykk.presentation.model.GenreView" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_default"
            android:fontFamily="@font/default_medium"
            android:background="@drawable/background_rounded_light"
            android:paddingStart="@dimen/spacing_inline"
            android:paddingTop="@dimen/spacing_small"
            android:paddingEnd="@dimen/spacing_inline"
            android:paddingBottom="@dimen/spacing_small"
            android:text="@{genre.name}"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="Thriller" />
    </RelativeLayout>
</layout>