<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/backgroundColorLight</item>
        <item name="dividerColor">@color/colorDividerLight</item>
        <item name="highlightColor">@color/highlightColorLight</item>
        <item name="placeHolder">@drawable/background_placeholder</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout</item>
    </style>

    <style name="AppTheme.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/backgroundColorDark</item>
        <item name="dividerColor">@color/colorDividerDark</item>
        <item name="highlightColor">@color/highlightColorDark</item>
        <item name="placeHolder">@drawable/background_placeholder_dark</item>
        <item name="android:statusBarColor">@color/backgroundColorDark</item>
        <item name="tabStyle">@style/TabLayoutDark</item>
    </style>

    <style name="TabLayoutDark" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">?android:textColorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="fontPath">fonts/AirbnbCereal-Medium.ttf</item>
    </style>
</resources>
