<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <corners android:radius="@dimen/default_radius" />
        </shape>
    </item>
    <item
        android:left="14dp"
        android:right="14dp">
        <shape android:shape="rectangle">
            <solid android:color="?contentBackgroundColor" />
        </shape>
    </item>
    <item
        android:bottom="14dp"
        android:top="14dp">
        <shape android:shape="rectangle">
            <solid android:color="?contentBackgroundColor" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_radius" />
            <solid android:color="?contentBackgroundColor" />
        </shape>
    </item>
</layer-list>